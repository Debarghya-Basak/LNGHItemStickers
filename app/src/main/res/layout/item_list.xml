<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/itemBrand_itemList"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="t"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/itemCategory_itemList"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="t"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/itemName_itemList"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="t"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/size_itemList"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="t"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/quantity_itemList"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="t"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/stickerQuantity_itemList"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="t"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/deleteButton_itemList"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>